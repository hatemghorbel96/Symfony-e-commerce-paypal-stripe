 <div class="navbar-tool dropdown ms-3"><a class="navbar-tool-icon-box bg-secondary dropdown-toggle" href="{{path('index_panier')}}"><span class="navbar-tool-label">{{ render(controller('App\\Controller\\PanierController::sum')) }}</span><i class="navbar-tool-icon ci-cart"></i></a><a class="navbar-tool-text" href="shop-cart.html"><small>Panier</small>{{ render(controller('App\\Controller\\PanierController::total')) }} DT</a>
                  <!-- Cart dropdown-->
                  <div class="dropdown-menu dropdown-menu-end">
                    <div class="widget widget-cart px-3 pt-2 pb-3" style="width: 20rem;">
                      <div style="height: 15rem;" data-simplebar data-simplebar-auto-hide="false">

                       {% if  panier| length > 0 %}  

           {% set total = 0 %} 
                 {% for p in panier %}
                        <div class="widget-cart-item pb-2 border-bottom">
                          <a class="btn-close text-danger" href="{{path('delete_panier',{'id':p.product.id})}}" aria-label="Remove"><span aria-hidden="true">&times;</span></a>
                          <div class="d-flex align-items-center"><a class="flex-shrink-0" href="shop-single-v1.html">
                          {% for i in p.product.images |slice(0,1) %}
                          <img src="/uploads/{{i.nom}}" width="64" alt="Product"></a>
                          {% endfor %}
                            <div class="ps-2">

                              <h6 class="widget-product-title"><a href="shop-single-v1.html">{{p.product.name}}</a></h6>
                              <div class="widget-product-meta"><span class="text-accent me-2">{{p.product.price}} DT</span><span class="text-muted">x 1</span></div>
                            </div>
                          </div>
                        </div>
                     {% set total = total +(p.product.price * p.quantity) %}
                     {% endfor %}
                  
                      </div>
                      <div class="d-flex flex-wrap justify-content-between align-items-center py-3">
                        <div class="fs-sm me-2 py-2"><span class="text-muted">Total:</span><span class="text-accent fs-base ms-1">{{total}} DT</span></div><a class="btn btn-outline-secondary btn-sm" href="shop-cart.html">Expand cart<i class="ci-arrow-right ms-1 me-n1"></i></a>
                     
                      </div><a class="btn btn-primary btn-sm d-block w-100" href="checkout-details.html"><i class="ci-card me-2 fs-base align-middle"></i>Checkout</a>
                             {% else %}
           <p><b>Your shopping cart is empty</b></p>
           {% endif %}
                    </div>
                  </div>
                </div>