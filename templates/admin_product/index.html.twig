{% extends 'baseadmin.html.twig' %}

{% block title %}Liste de produits!{% endblock %}

{% block body %}
   <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title mb-0">Ajouter, Modifier & Supprimer</h4>
                                </div><!-- end card header -->

                                <div class="card-body">
                                    <div id="customerList">
                                        <div class="row g-4 mb-3">
                                            <div class="col-sm-auto">
                                                <div>
                                                    <button type="button" class="btn btn-success add-btn" data-bs-toggle="modal" id="create-btn" data-bs-target="#showModal"><i class="ri-add-line align-bottom me-1"></i> Add</button>
                                                    <button class="btn btn-soft-danger" onClick="deleteMultiple()"><i class="ri-delete-bin-2-line"></i></button>
                                                </div>
                                            </div>
                                            <div class="col-sm">
                                                <div class="d-flex justify-content-sm-end">
                                                    <div class="search-box ms-2">
                                                        <input type="text" class="form-control search" placeholder="Search...">
                                                        <i class="ri-search-line search-icon"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="table-responsive table-card mt-3 mb-1">
                                            <table class="table align-middle table-nowrap" id="customerTable">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th scope="col" style="width: 50px;">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="checkAll" value="option">
                                                            </div>
                                                        </th>
                                                        <th class="sort" data-sort="customer_name">Nom</th>
                                                        <th class="sort" data-sort="email">Prix</th>
                                                        <th class="sort" data-sort="phone">Stock</th>
                                                        <th class="sort" data-sort="date">Categorie</th>
                                                        <th class="sort" data-sort="status">Etat</th>
                                                         <th class="sort" data-sort="status">Marque</th>
                                                        <th class="sort" data-sort="action">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody class="list">

                                                {% for p in products %}
                                                    <tr>
                                                        <th scope="row">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="chk_child" value="option1">
                                                            </div>
                                                        </th>
                                                        <td class="id">
                                                         {% for i in p.images |slice(0,1) %}
                                                        <img src="/uploads/{{i.nom}}" width="50" alt="Product"></a>
                                                        {% endfor %}
                                                        {{p.name}}</a></td>
                                                        <td class="customer_name">{{p.price}} DT</td>
                                                        <td class="email">{{p.stock}}</td>
                                                       
                                                        <td class="phone">{{p.category.nom}}</td>
                                                       
                                                        <td class="status">
                                                         {% if p.stock == 0 %}
                                                        <span class="badge badge-soft-danger text-uppercase">                                                      
                                                        stock vide
                                                        {% else %}
                                                          <span class="badge badge-soft-success text-uppercase">   
                                                        in stock
                                                        {% endif %}
                                                        
                                                        </span></td>
                                                         <td class="phone"> <img src="/uploads/{{p.marque.image}}" width="50" alt=""> </td>
                                                        <td>
                                                            <div class="d-flex gap-2">
                                                                <div class="edit">
                                                                    <a class="btn btn-sm btn-success edit-item-btn" href="{{path('admin_edit_img',{'id':p.id})}}" >Modifier</a>
                                                                </div>

                                                                <div class="edit">
                                                                    <a class="btn btn-sm btn-primary edit-item-btn" href="{{path('remise',{'id':p.id})}}" >Remise</a>
                                                                </div>

                                                                <div class="remove">
                                                                    <button class="btn btn-sm btn-danger remove-item-btn" data-bs-toggle="modal" data-bs-target="#deleteRecordModal">Supprimer</button>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                            <div class="noresult" style="display: none">
                                                <div class="text-center">
                                                    <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px"></lord-icon>
                                                    <h5 class="mt-2">Sorry! No Result Found</h5>
                                                    <p class="text-muted mb-0">We've searched more than 150+ Orders We did not find any orders for you search.</p>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-end">
                                            <div class="pagination-wrap hstack gap-2">
                                                <a class="page-item pagination-prev disabled" href="#">
                                                    Previous
                                                </a>
                                                <ul class="pagination listjs-pagination mb-0"></ul>
                                                <a class="page-item pagination-next" href="#">
                                                    Next
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- end card -->
                            </div>
                            <!-- end col -->
                        </div>
                        
                    </div>
                    <!-- end row -->

                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->


{% endblock %}
