{% extends 'baseadmin.html.twig' %}

{% block title %}liste des categories!{% endblock %}

{% block body %}
   <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                               

                                <div class="card-body">
                                    <div id="customerList">
                                        <div class="row g-4 mb-3">
                                            <div class="col-sm-auto">
                                               
                                            </div>
                                            <div class="col-sm">
                                                <div class="d-flex justify-content-sm-end">
                                                    <div class="search-box ms-2">
                                                        <input type="text" class="form-control search" placeholder="Search...">
                                                        <i class="ri-search-line search-icon"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="table-responsive table-card mt-3 mb-1">
                                            <table class="table align-middle table-nowrap" id="customerTable">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th scope="col" style="width: 50px;">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="checkAll" value="option">
                                                            </div>
                                                        </th>
                                                        <th class="sort" data-sort="customer_name">Nom</th>
                                                         <th class="sort" data-sort="customer_name">Adresse e-mail</th>
                                                          <th class="sort" data-sort="customer_name">Téléphone</th>
                                                           <th class="sort" data-sort="customer_name">Total Solde</th>
                                                           <th class="sort" data-sort="customer_name">Nombre de commandes</th>
                                                        <th class="sort" data-sort="email">Action</th>
                                                    
                                                    </tr>
                                                </thead>
                                                <tbody class="list">

                                                {% for c in clients %}
                                                    <tr>
                                                        <th scope="row">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="chk_child" value="option1">
                                                            </div>
                                                        </th>
                                                        <td class="id">
                                                       
                                                        <img src="/uploads/{{c.photo}}" width="50" alt="Product"></a>
                                                       
                                                       {{c.prenom}} {{c.nom}}</a></td>
                                                        <td>{{c.email}}</td>
                                                        <td>{{c.phone}}</td>
                                                        <td> {% set sum = 0 %}    
                                                        {% set loopOutput %} 
                                                        {% for com in c.orders  %}
                                                        {% set sum = sum + com.total %}
                                                        {% endfor %}{% endset %}{{ sum }} DT{{ loopOutput }}
                                                        </td>
                                                        <td>{{c.orders | length}}</td>
                                                        
                                                       
                                                      
                                                        <td>
                                                            <div class="d-flex gap-2">
                                                                <div class="edit">
                                                                    <a class="btn btn-sm btn-success edit-item-btn" href="{{path('show_clients',{'id':c.id})}}" >Voire tout les commandes</a>
                                                                </div>
                                                                
                                                            </div>
                                                        </td>
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                           
                                        </div>

                                        <div class="d-flex justify-content-end">
                                            <div class="pagination-wrap hstack gap-2">
                                                <a class="page-item pagination-prev disabled" href="#">
                                                    Previous
                                                </a>
                                                <ul class="pagination listjs-pagination mb-0"></ul>
                                                <a class="page-item pagination-next" href="#">
                                                    Next
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- end card -->
                            </div>
                            <!-- end col -->
                        </div>
                        
                    </div>
                    <!-- end row -->

                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->


{% endblock %}
