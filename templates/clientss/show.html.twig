{% extends 'baseadmin.html.twig' %}

{% block title %}liste des categories!{% endblock %}

{% block body %}
   <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                               

                                <div class="card-body">
                                    <div id="customerList">
                                        <div class="row g-4 mb-3">
                                            <div class="col-sm-auto">
                                              
                                            </div>
                                            <div class="col-sm">
                                                <div class="d-flex justify-content-sm-end">
                                                    <div class="search-box ms-2">
                                                        <input type="text" class="form-control search" placeholder="Search...">
                                                        <i class="ri-search-line search-icon"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="table-responsive table-card mt-3 mb-1">
                                            <table class="table align-middle table-nowrap" id="customerTable">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th scope="col" style="width: 50px;">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" id="checkAll" value="option">
                                                            </div>
                                                        </th>
                                                        <th class="sort" data-sort="customer_name">reference</th>
                                                         <th class="sort" data-sort="customer_name">Nom du transporteur</th>
                                                          <th class="sort" data-sort="customer_name">Prix du transporteur</th>
                                                           <th class="sort" data-sort="customer_name">Address</th>
                                                           <th class="sort" data-sort="customer_name">Phone</th>
                                                        
                                                    
                                                    </tr>
                                                </thead>
                                                <tbody class="list">

                                                {% for c in commendes %}
                                                    <tr>
                                                        <th scope="row">
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="chk_child" value="option1">
                                                            </div>
                                                        </th>
                                                        <td class="id"> <span class="badge bg-info"> {{c.reference}}</span>   </td>                                    
                                                       
                                                        <td>{{c.nomtrasnport}}</td>
                                                        <td>{{(c.prixtransport) / 1000}} DT</td>
                                                        <td> {{c.address}}</td>
                                                        
                                                        <td>{{c.phone}}</td>
                                                        
                                                       
                                                      
                                                       
                                                    </tr>
                                                {% endfor %}

                                                </tbody>
                                            </table>
                                           
                                        </div>

                                        <div class="d-flex justify-content-end">
                                            <div class="pagination-wrap hstack gap-2">
                                                <a class="page-item pagination-prev disabled" href="#">
                                                    Previous
                                                </a>
                                                <ul class="pagination listjs-pagination mb-0"></ul>
                                                <a class="page-item pagination-next" href="#">
                                                    Next
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- end card -->
                            </div>
                            <!-- end col -->
                        </div>
                        
                    </div>
                    <!-- end row -->

                </div>
                <!-- container-fluid -->
            </div>
            <!-- End Page-content -->


{% endblock %}
