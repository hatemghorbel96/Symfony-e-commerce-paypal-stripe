

  {% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
  <div class="page-title-overlap bg-dark pt-4">
        <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
          <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-start">
                <li class="breadcrumb-item"><a class="text-nowrap" href="index.html"><i class="ci-home"></i>Home</a></li>
                <li class="breadcrumb-item text-nowrap"><a href="#">Account</a>
                </li>
                <li class="breadcrumb-item text-nowrap active" aria-current="page">Single ticket</li>
              </ol>
            </nav>
          </div>
          <div class="order-lg-1 pe-lg-4 text-center text-lg-start">
            <h1 class="h3 text-light mb-0">Signle ticket</h1>
          </div>
        </div>
      </div>
      <div class="container pb-5 mb-2 mb-md-4">
        <div class="row">
          <!-- Sidebar-->
            {{ render(controller('App\\Controller\\UserDachboardController::menu')) }}
          <!-- Content  -->
          <section class="col-lg-8">
            <!-- Toolbar-->
            <div class="d-none d-lg-flex justify-content-between align-items-center pt-lg-3 pb-4 pb-lg-5 mb-lg-4">
              <div class="d-flex w-100 text-light text-center me-3">
             
              </div><a class="btn btn-primary btn-sm" href="account-signin.html"><i class="ci-sign-out me-2"></i>Sign out</a>
            </div>
            <!-- Ticket details (visible on mobile)-->
            <div class="d-flex d-lg-none flex-wrap bg-secondary text-center rounded-3 pt-4 px-4 pb-1 mb-4">
              <div class="fs-sm px-3 pb-3">
                <div class="fw-medium">Date Submitted</div>
                <div class="text-muted">09/27/2019</div>
              </div>
              <div class="fs-sm px-3 pb-3">
                <div class="fw-medium">Last Updated</div>
                <div class="text-muted">09/30/2019</div>
              </div>
              <div class="fs-sm px-3 pb-3">
                <div class="fw-medium">Type</div>
                <div class="text-muted">Website problem</div>
              </div>
              <div class="fs-sm px-3 pb-3">
                <div class="fw-medium">Priority</div><span class="badge bg-warning">High</span>
              </div>
              <div class="fs-sm px-3 pb-3">
                <div class="fw-medium">Status</div><span class="badge bg-success">Open</span>
              </div>
            </div>

            {% for c in comments %}
            <div class="d-flex align-items-start pb-4 border-bottom">
            
            

               {% for i in c.product.images | slice(0,1) %}
                 <img class="rounded-circle" src="/uploads/{{i.nom}}" width="50" alt="Michael Davis">
                 {% endfor %}

              <div class="ps-3">
                <h6 class="fs-md mb-2">Vous avez commentez sur cette article </h6> 
                
                <div class="alert alert-secondary alert-dismissible fade show"> {{c.product.name}}</div><br>
                 <div class="star-rating">
                                                 {% for i in 1..5 %}
												  {% if i <= c.rating %} 
												<li class="list-inline-item me-0"><i class="star-rating-icon ci-star-filled active"></i></li>
												{% else %}											
												<li class="list-inline-item me-0"><i class="star-rating-icon ci-star"></i></li>
												{% endif %}
                                 			 {% endfor %}</div>
                <p class="fs-md mb-1">{{c.content}}</p><span class="fs-ms text-muted"><i class="ci-time align-middle me-2"></i>{{c.createdAt ? c.createdAt|date('F j, Y, g:i a')}}</span>
              </div>
            </div>
            

           {% endfor %}
           
           
          </section>
        </div>
      </div>
    </main>

    {% endblock %}