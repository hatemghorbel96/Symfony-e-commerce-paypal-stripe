{% extends 'base.html.twig' %}

{% block title %}Hello OrderSuccessController!{% endblock %}

{% block body %}

  <section class="row g-0">
          <div class="col-md-6 bg-position-center bg-size-cover bg-secondary" style="min-height: 15rem; background-image: url({{asset('img/about/01.jpg')}});"></div>
          <div class="col-md-6 px-3 px-md-5 py-5">
            <div class="mx-auto py-lg-5" style="max-width: 35rem;">
              <h2 class="h3 pb-3"> Bonjour <strong>{{order.user.nom}} {{order.user.prenom}}</strong></h2>
                <h6 class="h4 pb-4"> Mode de paiement <strong> <span class="badge bg-info"> {{order.mode}}</span></strong></h6>
              <p class="fs-sm pb-3 text-muted">
               Merci pour votre commande n° <strong>{{order.reference}}</strong><br>
                nous envoyons un e-mail de confirmation à votre adresse <strong>{{order.user.email}}</strong><br>
                 Votre commande sera livrée par <strong>{{order.nomtrasnport}}</strong> vers : {{order.address}}
           </p> Pour voir plus de détails sur votre commande <a href="{{path('user_commende')}}">Mes commande</a></a>
            </div>
          </div>
        </section>
    
  



{% endblock %}
